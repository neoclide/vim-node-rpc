{
  "name": "vim-node-rpc",
  "version": "0.0.1",
  "description": "A transform module to make vim support RPC request as neovim",
  "main": "lib/index.js",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "start": "node lib/index",
    "clean": "rimraf lib",
    "lint": "tslint -c tslint.json -p .",
    "build": "tsc -p tsconfig.json",
    "watch": "tsc -p tsconfig.json --watch true --sourceMap",
    "test": "jest",
    "prepublish": "npm run clean && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neoclide/vim-node-rpc.git"
  },
  "keywords": [
    "vim",
    "neovim",
    "node"
  ],
  "author": "Qiming Zhao <chemzqm@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/neoclide/vim-node-rpc/issues"
  },
  "homepage": "https://github.com/neoclide/vim-node-rpc#readme",
  "dependencies": {
    "@chemzqm/tsconfig": "^0.0.2",
    "@chemzqm/tslint-config": "^1.0.14",
    "@types/msgpack-lite": "^0.1.6",
    "log4js": "^3.0.0",
    "msgpack-lite": "^0.1.26",
    "tslib": "^1.9.3",
    "tslint": "^5.11.0",
    "typescript": "^2.9.2",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/jest": "^23.3.0",
    "@types/node": "^10.5.2",
    "jest": "^23.4.1",
    "neovim": "^4.2.1",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.0.1"
  }
}
